<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e8e8"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="XXX,欢迎你"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="基础资料"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/profileResetIcon"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="头像"
                    android:textSize="20sp"/>
                <com.xieyingjie.smartsocket.diyview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:src="@drawable/user_icon"
                    android:layout_margin="8dp"
                    app:border_width="2dp"
                    app:border_color="@android:color/holo_blue_light"/>
                </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:id="@+id/profileResetAccount"
                android:layout_height="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="账户"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:textSize="18dp"
                    android:drawableRight="@drawable/right_arrow"
                    android:text="你的账号"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:id="@+id/profileResetSex"
                android:layout_height="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="性别"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:textSize="18dp"
                    android:drawableRight="@drawable/right_arrow"
                    android:text="你的性别"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:id="@+id/profileResetPhone"
                android:layout_height="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="手机"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:textSize="18dp"
                    android:drawableRight="@drawable/right_arrow"
                    android:text="你的手机"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:id="@+id/profileResetPassword"
                android:layout_height="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="更改密码"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:drawableRight="@drawable/right_arrow"/>
            </android.support.v7.widget.CardView>
             <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出账户"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="20dp"
                android:id="@+id/logout"
                android:textSize="20sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>